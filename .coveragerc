# Don't worry about coverage for the grid GUI (for now)
[run]
omit =
    armi/cli/gridGui.py
    armi/utils/gridEditor.py
    armi/utils/tests/test_gridGui.py
    venv/
source = armi
# change default .coverage file to something that doesn't have a dot
# because our Windows file server can't handle dots. :s
data_file = coverage_results.cov

[coverage:run]
parallel = true

[report]
omit =
    armi/cli/gridGui.py
    armi/utils/gridEditor.py
    */tests/*

exclude_lines =
    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise KeyboardInterrupt
    raise NotImplementedError
    except ImportError
    pass

    # Don't complain if non-runnable code isn't run:
    if __name__ == .__main__.:
